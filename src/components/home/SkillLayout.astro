---
import { Icon } from 'astro-icon/components'

type Skill = string | { name: string; icon?: string }

type Props = {
  title: string
  skills: Skill[]
}

const { title, skills } = Astro.props
---

<div class='flex flex-col gap-y-2 md:flex-row md:gap-x-5 md:gap-y-0'>
  <h3 class='w-1/5 font-medium text-foreground/80'>{title}</h3>
  <div class='flex flex-row flex-wrap gap-x-3 gap-y-2 md:w-4/5'>
    {
      skills.map((skill: Skill) => {
        const item = typeof skill === 'string' ? { name: skill } : skill

        return (
          <div class='group flex items-center justify-center gap-x-1.5 rounded-full border border-border/80 bg-muted/65 px-3 py-1 text-sm shadow-sm transition-all duration-200 hover:-translate-y-px hover:border-primary/55 hover:bg-primary/12 hover:shadow-md'>
            {item.icon && (
              <Icon
                name={item.icon}
                class='size-4 opacity-80 transition-opacity group-hover:opacity-100'
              />
            )}
            <span class='text-muted-foreground transition-colors group-hover:text-foreground'>
              {item.name}
            </span>
          </div>
        )
      })
    }
  </div>
</div>
