---
// src/components/SkillBadge.astro
import { Icon } from 'astro-icon/components'

interface Props {
  name: string
  icon?: string
}

const { name, icon } = Astro.props;
---

<div
  class="flex cursor-default items-center gap-x-2 border border-border rounded-full bg-secondary px-3 py-1 text-sm text-secondary-foreground font-medium transition-all duration-200 hover:bg-black/[.08] dark:hover:bg-white/[.08]"
>
  {icon && <Icon name={icon} class="size-4" />}
  <span>{name}</span>
</div>
